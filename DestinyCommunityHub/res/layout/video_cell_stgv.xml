<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/card_outer" >

    <RelativeLayout
        android:id="@+id/inner_frame"
        style="@style/card_inner_wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.opencabinetlabs.destinycommunityhub.ui.view.DimImageView
                android:id="@+id/img_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ddd"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/img_content"
                android:layout_alignParentRight="true"
                android:background="#AF000000" >

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="#fff"
                    android:textIsSelectable="false"
                     />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_content"
                android:background="#fff"
                android:fontFamily="sans-serif-light"
                android:padding="8dp"
                android:textColor="#000" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_bug"
        style="@style/card_shadow" />

</LinearLayout>